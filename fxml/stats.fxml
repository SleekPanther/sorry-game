<?import javafx.geometry.Insets?>
<FlowPane fx:controller='StatsController' stylesheets='css/stats.css' xmlns='http://javafx.com/javafx/8' xmlns:fx='http://javafx.com/fxml' >

	<Button text='Go to main menu' fx:id='mainMenuButton' />
	<Button text='Test DB connection' fx:id='dbButton' />
	<GridPane alignment="CENTER" hgap="10.0" vgap="10.0" >
		<padding>
			<Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
		</padding>
		<Label style="-fx-font: NORMAL 20 Tahoma;" text="Game Stats"
			   GridPane.columnIndex="0" GridPane.rowIndex="0">
		</Label>
		<TableView fx:id="tableView" GridPane.columnIndex="0"
				   GridPane.rowIndex="1">
			<columns>
				<TableColumn text="Player Name">
				</TableColumn>
				<TableColumn text="Time Started">
				</TableColumn>
				<TableColumn text="Time Ended">
				</TableColumn>
				<TableColumn text="Game Duration">
				</TableColumn>
				<TableColumn text="Computer 1 Settings">
				</TableColumn>
				<TableColumn text="Computer 2 Settings">
				</TableColumn>
				<TableColumn text="Computer 3 Settings">
				</TableColumn>
				<TableColumn text="Winner">
				</TableColumn>
			</columns>
		</TableView>
	</GridPane>

</FlowPane>